#!/bin/sh

echo "Running pre-push checks..."

# Type check
echo "Type checking..."
pnpm type-check
if [ $? -ne 0 ]; then
  echo "Type check failed. Push aborted."
  exit 1
fi

# Lint
echo "Linting..."
pnpm lint
if [ $? -ne 0 ]; then
  echo "Lint failed. Push aborted."
  exit 1
fi

# Tests
echo "Running tests..."
pnpm test
if [ $? -ne 0 ]; then
  echo "Tests failed. Push aborted."
  exit 1
fi

echo "All checks passed!"
